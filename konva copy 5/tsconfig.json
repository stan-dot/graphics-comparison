{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../melonjs",
    "paths": {
      "@/*": ["../melonjs/*"]
    }
  },
  "include": ["../melonjs/next-env.d.ts", "../melonjs/**/*.ts", "../melonjs/**/*.tsx", "../melonjs/.next/types/**/*.ts"],
  "exclude": ["../melonjs/node_modules"]
}
