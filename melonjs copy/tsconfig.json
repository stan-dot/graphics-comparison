{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../twinejs",
    "paths": {
      "@/*": ["../twinejs/*"]
    }
  },
  "include": ["../twinejs/next-env.d.ts", "../twinejs/**/*.ts", "../twinejs/**/*.tsx", "../twinejs/.next/types/**/*.ts"],
  "exclude": ["../twinejs/node_modules"]
}
